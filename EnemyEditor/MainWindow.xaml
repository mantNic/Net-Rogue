<Window x:Class="EnemyEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EnemyEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="AddEnemyToList" HorizontalAlignment="Left" Margin="346,102,0,0" VerticalAlignment="Top" Click="AddEnemyToList"/>
        <TextBox x:Name="EnemyNameEntry" HorizontalAlignment="Left" Margin="141,80,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="EnemyHitpointsEntry" HorizontalAlignment="Left" Margin="141,133,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120" RenderTransformOrigin="0.509,0.542"/>
        <ListBox x:Name="EnemyListBox" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="461,0,0,0"/>
        <TextBox x:Name="EnemySpriteEntry" HorizontalAlignment="Left" Margin="141,178,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button Content="SaveToJSON" HorizontalAlignment="Left" Margin="346,163,0,0" VerticalAlignment="Top" Click="SaveEnemiesToJSON"/>

    </Grid>
</Window>
